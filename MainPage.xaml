<Page
    x:Class="Photo_Library_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Photo_Library_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button 
                Content="Import Pictures" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Click= "Import_Photos_Button_ClickAsync"/>

        <Image Name="image1"  Source="{Binding Image}" HorizontalAlignment="Left" Height="234" Margin="384,416,0,0" VerticalAlignment="Top" Width="337"/>

    </Grid>
</Page>


